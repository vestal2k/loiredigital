---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<BaseLayout title="Blog - Loire Digital" description="Conseils et guides pour les commerces locaux : SEO, création de sites web, marketing digital et transformation numérique à Saint-Étienne.">
  <!-- Hero -->
  <section class="relative py-32 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-20 right-1/4 w-96 h-96 bg-indigo-electric-600/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-1/4 w-80 h-80 bg-indigo-electric-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-display font-bold text-white mb-6">
          Blog
        </h1>
        <p class="text-xl text-gray-400">
          Conseils, guides et actualités pour développer votre présence en ligne
          et faire grandir votre commerce à Saint-Étienne.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        {allPosts.length === 0 ? (
          <div class="text-center py-20">
            <p class="text-gray-400 text-lg">Aucun article pour le moment. Revenez bientôt !</p>
          </div>
        ) : (
          <div class="grid grid-cols-1 gap-12">
            {allPosts.map((post) => (
              <article class="flex flex-col md:flex-row gap-8 pb-12 border-b border-dark-800 last:border-0">
                {/* Post Image/Icon */}
                <div class="md:w-72 flex-shrink-0">
                  <div class="aspect-video bg-dark-900 border border-dark-800 rounded-xl flex items-center justify-center overflow-hidden">
                    {post.data.image ? (
                      <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover" />
                    ) : (
                      <div class="text-center p-6">
                        <div class="w-16 h-16 bg-indigo-electric-950 border border-indigo-electric-900 rounded-xl flex items-center justify-center mx-auto mb-4">
                          {post.data.tags.includes('SEO') ? (
                            <Icon name="search" class="text-indigo-electric-400" size={32} />
                          ) : post.data.tags.includes('tarifs') ? (
                            <Icon name="price-tag" class="text-indigo-electric-400" size={32} />
                          ) : post.data.tags.includes('commerce local') ? (
                            <Icon name="storefront" class="text-indigo-electric-400" size={32} />
                          ) : (
                            <Icon name="document-text" class="text-indigo-electric-400" size={32} />
                          )}
                        </div>
                        <p class="text-indigo-electric-400 font-semibold text-sm">
                          {post.data.title.split(' ').slice(0, 3).join(' ')}
                        </p>
                      </div>
                    )}
                  </div>
                </div>

                {/* Post Content */}
                <div class="flex-1">
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.map((tag: string) => (
                      <span class="text-xs bg-indigo-electric-950 text-indigo-electric-400 border border-indigo-electric-900 px-3 py-1 rounded-full font-medium capitalize">
                        {tag}
                      </span>
                    ))}
                  </div>

                  <h2 class="text-2xl md:text-3xl font-display font-bold text-white mb-3 hover:text-indigo-electric-400 transition-colors">
                    <a href={`/blog/${post.slug}`}>
                      {post.data.title}
                    </a>
                  </h2>

                  <div class="flex items-center text-sm text-gray-500 mb-4">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <time datetime={post.data.pubDate.toISOString()}>
                      {formatDate(post.data.pubDate)}
                    </time>
                    <span class="mx-2">•</span>
                    <span>{post.data.author}</span>
                  </div>

                  <p class="text-gray-400 mb-6 leading-relaxed">
                    {post.data.description}
                  </p>

                  <a
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center text-indigo-electric-400 font-semibold hover:text-indigo-electric-300 group"
                  >
                    Lire l'article complet
                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-32 relative">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-indigo-electric-950/10 to-transparent"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
          Restez informé
        </h2>
        <p class="text-gray-400 mb-8 text-lg">
          Recevez nos meilleurs conseils pour développer votre commerce en ligne directement dans votre boîte mail.
        </p>
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="votre@email.fr"
            class="flex-1 px-6 py-3 bg-dark-900 border border-dark-800 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-electric-600 focus:border-transparent outline-none"
            required
          />
          <button type="submit" class="btn-primary whitespace-nowrap">
            S'inscrire
          </button>
        </form>
        <p class="text-xs text-gray-500 mt-4">
          Pas de spam. Vous pouvez vous désinscrire à tout moment.
        </p>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-display font-bold text-white mb-12 text-center">Sujets populaires</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/blog/pourquoi-site-web-commerce" class="card hover:scale-[1.02] transition-transform text-center group">
            <div class="w-12 h-12 bg-indigo-electric-950 border border-indigo-electric-900 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:border-indigo-electric-700 transition-colors">
              <Icon name="storefront" class="text-indigo-electric-400" size={24} />
            </div>
            <div class="font-semibold text-white text-sm">Commerce local</div>
          </a>
          <a href="/blog/seo-local-saint-etienne" class="card hover:scale-[1.02] transition-transform text-center group">
            <div class="w-12 h-12 bg-indigo-electric-950 border border-indigo-electric-900 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:border-indigo-electric-700 transition-colors">
              <Icon name="search" class="text-indigo-electric-400" size={24} />
            </div>
            <div class="font-semibold text-white text-sm">SEO Local</div>
          </a>
          <a href="/blog/combien-coute-site-web" class="card hover:scale-[1.02] transition-transform text-center group">
            <div class="w-12 h-12 bg-indigo-electric-950 border border-indigo-electric-900 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:border-indigo-electric-700 transition-colors">
              <Icon name="price-tag" class="text-indigo-electric-400" size={24} />
            </div>
            <div class="font-semibold text-white text-sm">Tarifs & Budget</div>
          </a>
          <a href="/blog" class="card hover:scale-[1.02] transition-transform text-center group">
            <div class="w-12 h-12 bg-indigo-electric-950 border border-indigo-electric-900 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:border-indigo-electric-700 transition-colors">
              <Icon name="palette" class="text-indigo-electric-400" size={24} />
            </div>
            <div class="font-semibold text-white text-sm">Design Web</div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-5xl md:text-6xl font-display font-bold text-white mb-8">
          Prêt à passer à l'action ?
        </h2>
        <p class="text-xl text-gray-400 mb-12">
          Ces conseils vous ont convaincu ? Créons ensemble le site web qui fera
          décoller votre commerce à Saint-Étienne.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/devis" class="btn-primary text-lg px-8 py-4">
            Obtenir un devis gratuit
          </a>
          <a href="/contact" class="btn-secondary text-lg px-8 py-4">
            Discuter de mon projet
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
