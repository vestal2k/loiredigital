---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

// Get other posts for recommendations
const allPosts = (await getCollection('blog'))
  .filter((post) => post.slug !== entry.slug && !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);
---

<BaseLayout title={`${entry.data.title} - Loire Digital`} description={entry.data.description}>
  <!-- Article Header -->
  <article class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm">
          <ol class="flex items-center space-x-2 text-gray-500">
            <li><a href="/" class="hover:text-indigo-electric-400 transition-colors">Accueil</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/blog" class="hover:text-indigo-electric-400 transition-colors">Blog</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-400 truncate">{entry.data.title}</li>
          </ol>
        </nav>

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-6">
          {entry.data.tags.map((tag: string) => (
            <span class="text-xs bg-indigo-electric-950 text-indigo-electric-400 border border-indigo-electric-900 px-3 py-1 rounded-full font-medium capitalize">
              {tag}
            </span>
          ))}
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-6xl font-display font-bold text-white mb-6 leading-tight">
          {entry.data.title}
        </h1>

        <!-- Meta -->
        <div class="flex items-center text-gray-400 mb-8 pb-8 border-b border-dark-800">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-electric-600 to-indigo-electric-700 rounded-full flex items-center justify-center mr-4">
              <span class="text-white font-bold text-lg">LD</span>
            </div>
            <div>
              <div class="font-semibold text-white">{entry.data.author}</div>
              <div class="text-sm flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <time datetime={entry.data.pubDate.toISOString()}>
                  {formatDate(entry.data.pubDate)}
                </time>
              </div>
            </div>
          </div>
        </div>

        <!-- Article Content -->
        <div class="prose prose-lg prose-invert max-w-none
          prose-headings:font-display prose-headings:font-bold prose-headings:text-white
          prose-p:text-gray-400 prose-p:leading-relaxed
          prose-a:text-indigo-electric-400 prose-a:no-underline hover:prose-a:text-indigo-electric-300
          prose-strong:text-white prose-strong:font-semibold
          prose-ul:text-gray-400 prose-ol:text-gray-400
          prose-li:text-gray-400
          prose-code:text-indigo-electric-400 prose-code:bg-dark-900 prose-code:px-2 prose-code:py-1 prose-code:rounded
          prose-pre:bg-dark-900 prose-pre:border prose-pre:border-dark-800
          prose-blockquote:border-l-indigo-electric-600 prose-blockquote:text-gray-400">
          <Content />
        </div>

        <!-- Share Buttons -->
        <div class="mt-12 pt-8 border-t border-dark-800">
          <h3 class="text-lg font-display font-semibold text-white mb-4">Partager cet article</h3>
          <div class="flex gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-2 bg-dark-900 hover:bg-dark-800 border border-dark-800 rounded-lg text-gray-300 font-medium transition-colors"
            >
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(entry.data.title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-2 bg-dark-900 hover:bg-dark-800 border border-dark-800 rounded-lg text-gray-300 font-medium transition-colors"
            >
              LinkedIn
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-2 bg-dark-900 hover:bg-dark-800 border border-dark-800 rounded-lg text-gray-300 font-medium transition-colors"
            >
              Facebook
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Articles -->
  {allPosts.length > 0 && (
    <section class="py-20 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-indigo-electric-950/10 to-transparent"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-4xl font-display font-bold text-white mb-12 text-center">
            Articles recommandés
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {allPosts.map((post) => (
              <article class="card hover:scale-[1.02] transition-transform">
                <div class="aspect-video bg-dark-950 border border-dark-800 rounded-xl flex items-center justify-center mb-6 overflow-hidden">
                  <div class="text-center p-6">
                    <div class="w-16 h-16 bg-indigo-electric-950 border border-indigo-electric-900 rounded-xl flex items-center justify-center mx-auto mb-4">
                      {post.data.tags.includes('SEO') ? (
                        <Icon name="search" class="text-indigo-electric-400" size={32} />
                      ) : post.data.tags.includes('tarifs') ? (
                        <Icon name="price-tag" class="text-indigo-electric-400" size={32} />
                      ) : post.data.tags.includes('commerce local') ? (
                        <Icon name="storefront" class="text-indigo-electric-400" size={32} />
                      ) : (
                        <Icon name="document-text" class="text-indigo-electric-400" size={32} />
                      )}
                    </div>
                    <p class="text-indigo-electric-400 font-semibold text-sm">
                      {post.data.title.split(' ').slice(0, 3).join(' ')}
                    </p>
                  </div>
                </div>

                <div class="flex flex-wrap gap-2 mb-3">
                  {post.data.tags.slice(0, 2).map((tag: string) => (
                    <span class="text-xs bg-indigo-electric-950 text-indigo-electric-400 border border-indigo-electric-900 px-2 py-1 rounded-full capitalize">
                      {tag}
                    </span>
                  ))}
                </div>

                <h3 class="text-xl font-display font-bold text-white mb-3 hover:text-indigo-electric-400 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>

                <p class="text-gray-400 mb-4 text-sm line-clamp-2">
                  {post.data.description}
                </p>

                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-indigo-electric-400 font-semibold hover:text-indigo-electric-300 text-sm group"
                >
                  Lire l'article
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </article>
            ))}
          </div>

          <div class="text-center mt-12">
            <a href="/blog" class="btn-primary">
              Voir tous les articles
            </a>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-5xl md:text-6xl font-display font-bold text-white mb-8">
          Besoin d'aide pour votre projet web ?
        </h2>
        <p class="text-xl text-gray-400 mb-12">
          Loire Digital accompagne les commerces de Saint-Étienne dans leur transformation digitale.
          Discutons de votre projet !
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/devis" class="btn-primary text-lg px-8 py-4">
            Calculer mon devis
          </a>
          <a href="/contact" class="btn-secondary text-lg px-8 py-4">
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
